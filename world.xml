<?xml version="1.0" standalone="no"?>
<world_step xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="schema/world_step/world_step.xsd">

    <world_metadata>
        <next_world_step>./world_1</next_world_step>
    </world_metadata>

    <status_definitions>
        <property_definition name="athletics" default="0"/>
        <property_definition_range name="strength" default="10" value="8" max_value="20"/>
        <property_definition_range name="constitution" default="10" value="8" max_value="20"/>
    </status_definitions>

    <race_definitions>
        <race_definition name="human">
            <vision value="20"/>
            <movement value="5"/>
            <property_bonus type="strength" value="0" max_value="2"/>
            <property_bonus type="constitution" value="3"/>
        </race_definition>
    </race_definitions>

    <items_definition>
        <item name="Long sword">
            <weight-kg value="2"/>
            <wearable slot="hand"/>
        </item>
        <item name="dress">
            <weight-kg value="1"/>
            <wearable slot="chest"/>
            <wearable slot="legs"/>
        </item>
    </items_definition>

    <locations_markov_chain>
        <location_markov_link type="plains">
            <sibling type="plains" quantity="20" position="all"/>
            <sibling type="forest" position="all"/>
        </location_markov_link>

        <location_markov_link type="forest">
            <sibling type="forest" quantity="20" position="all"/>
            <sibling type="plains" position="all"/>
            <sibling type="hills" position="all"/>
        </location_markov_link>

        <location_markov_link type="hills">
            <sibling type="hills" quantity="20" position="all"/>
            <sibling type="forest" position="all"/>
        </location_markov_link>
    </locations_markov_chain>

    <quests_markov_chain>
        <quest_markov_link type="talk-to">
            <next type="talk-to" quantity="4"/>
            <next type="escort" quantity="2"/>
            <next type="assassination"/>
            <complete_condition>

            </complete_condition>
        </quest_markov_link>
        <quest_markov_link type="escort">
            <next type="assassination" quantity="4"/>
            <next type="talk-to"/>
            <complete_condition>
            </complete_condition>
        </quest_markov_link>
        <quest_markov_link type="assassination">
            <next type="talk-to" quantity="4"/>
            <complete_condition>
                <person>
                    <inventory>
                        <item_ref type=""/>
                    </inventory>
                </person>
            </complete_condition>
        </quest_markov_link>
    </quests_markov_chain>

    <people>
        <person name="Billy">
            <race name="human"/>
            <location x="10" y="10"/>
            <!--            <relations with="Bob"/>-->
            <inventory>
                <item_ref type="Long sword" equipped="hand"/>
            </inventory>
        </person>
        <!--        <person name="Bob">-->
        <!--            <location x="-50" y="-50"/>-->
        <!--        </person>-->
    </people>

    <locations>
        <cell type="plains" x="0" y="0"/>
        <cell type="plains" x="0" y="1"/>
        <cell type="plains" x="0" y="-1"/>

        <cell type="plains" x="1" y="0"/>
        <cell type="plains" x="1" y="1"/>
        <cell type="plains" x="1" y="-1"/>

        <cell type="plains" x="-1" y="0"/>
        <cell type="plains" x="-1" y="1"/>
        <cell type="plains" x="-1" y="-1"/>

        <layer type="underdark">
            <cell type="grass" x="0" y="0"/>
        </layer>
    </locations>

</world_step>