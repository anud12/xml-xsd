<?xml version="1.0" standalone="no"?>
<world_step xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="schema/world_step/world_step.xsd">

    <world_metadata>
        <next_world_step>./world_1</next_world_step>
    </world_metadata>

    <status-definitions>
        <property-definition name="strength" min-value="8" max-value="20"/>
        <property-definition name="constitution" min-value="8" max-value="20"/>
        <property-definition name="vision" max-value="20"/>
    </status-definitions>

    <items-definition>
        <item name="Long sword">
            <weight-kg value="2"/>
            <wearable slot="hand"/>
        </item>
        <item name="dress">
            <weight-kg value="1"/>
            <wearable slot="chest"/>
            <wearable slot="legs"/>
        </item>
    </items-definition>

    <locations_markov_chain>
        <location_markov_link type="plains">
            <sibling type="plains" position="fill"/>
        </location_markov_link>
        <location_markov_link type="grass">
            <sibling type="plains" position="all"/>
            <sibling type="dry-grass" position="bottom"/>
            <sibling type="dry-grass" position="top"/>

<!--            <sibling type="grass" position="left" quantity="10"/>-->
<!--            <sibling type="dry-grass" position="left" quantity="5"/>-->
        </location_markov_link>
        <location_markov_link type="dry-grass">
            <sibling type="plains" position="fill"/>
            <sibling type="dry-grass" position="left" quantity="10"/>
            <sibling type="desert" position="left" quantity="2"/>
            <sibling type="grass" position="left"/>
        </location_markov_link>
        <location_markov_link type="desert">
            <sibling type="plains" position="fill"/>
            <sibling type="dry-grass" position="left"/>
            <sibling type="desert" position="left" quantity="3"/>
        </location_markov_link>
    </locations_markov_chain>

    <quests_markov_chain>
        <quest_markov_link type="talk-to">
            <next type="talk-to" quantity="4"/>
            <next type="escort" quantity="2"/>
            <next type="assassination"/>
            <complete_condition>

            </complete_condition>
        </quest_markov_link>
        <quest_markov_link type="escort">
            <next type="assassination" quantity="4"/>
            <next type="talk-to"/>
            <complete_condition>
            </complete_condition>
        </quest_markov_link>
        <quest_markov_link type="assassination">
            <next type="talk-to" quantity="4"/>
            <complete_condition>
                <person>
                    <inventory>
                        <item-ref type=""/>
                    </inventory>
                </person>
            </complete_condition>
        </quest_markov_link>
    </quests_markov_chain>

    <people>
        <person name="Billy">
            <relations with="Bob"/>
            <inventory>
                <item-ref type="Long sword" equipped="hand"/>
            </inventory>
        </person>
        <person name="Bob"/>
    </people>

    <locations>
        <location type="grass" x="-1" y="-1"/>
        <location type="grass" x="-1" y="0"/>
        <location type="grass" x="-1" y="1"/>

        <location type="grass" x="0" y="1"/>
        <location type="grass" x="0" y="-1"/>

        <location type="grass" x="1" y="-1"/>
        <location type="grass" x="1" y="0"/>
        <location type="grass" x="1" y="1"/>
        <grid type="underdark">
            <location type="grass" x="0" y="0"/>
        </grid>
    </locations>

</world_step>