<?xml version="1.0" standalone="no" ?>
<World xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="./schema/schema.xsd">
    <locations>
        <location type="grass" x="0" y="0"/>
        <grid type="underdark">
            <location type="grass" x="0" y="0"/>
        </grid>
    </locations>
    <people xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="./schema/people.xsd">
        <person name="Billy">
            <relations with="Bob"/>
            <inventory>
                <item-ref type="Long sword" equipped="hand"/>
            </inventory>
        </person>
        <person name="Bob"/>
    </people>
    <items-definition>
        <item name="Long sword">
            <weight-kg value="2"/>
            <wearable slot="hand"/>
        </item>
        <item name="dress">
            <weight-kg value="1"/>
            <wearable slot="chest"/>
            <wearable slot="legs"/>
        </item>
    </items-definition>
    <locations-definition>
        <location-definition type="grass">
            <tag name="outdoor"/>
            <sibling tag="outdoor"/>
        </location-definition>
    </locations-definition>
    <quests>
        <quest type="escort">
            <next type="assassination" quantity="2"/>
        </quest>
        <quest type="assassination"/>
    </quests>
</World>
