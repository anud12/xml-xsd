<World xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="schema.xsd">
    <people>
        <person name="Billy">
            <relations with="Bob"/>
            <inventory>
                <item-ref type="Long sword" equipped="hand"/>
            </inventory>
        </person>
        <person name="Bob"/>
    </people>
    <items-definition>
        <item name="Long sword">
            <weight-kg value="2"/>
            <wearable slot="hand"/>
        </item>
    </items-definition>
    <locations-definition>
        <location type="farm">
            <area>
                <length min="200" max="200"/>
                <width min="200" max="200"/>
            </area>
            <children rows="1" columns="3">
                <location-ref type="grass"/>
                <cell row="1" column="2">
                    <children columns="3" rows="1">
                        <location-ref type="cabin"/>
                    </children>
                </cell>
            </children>
            <neighbour>
                <location-ref type="grass"/>
                <bottom cells="2">
                    <location-ref type=""/>
                    <cell position="1">
                        <location-ref type="qwe"/>
                    </cell>
                </bottom>
            </neighbour>
        </location>
    </locations-definition>
    <quests>
        <quest type="escort">
            <next type="assassination" quantity="2"/>
        </quest>
        <quest type="assassination"/>
    </quests>
</World>