{
  "compilerOptions": {
    "target": "es6",                         /* Specify ECMAScript target version */
    "module": "commonjs",                    /* Specify module code generation */
    "strict": false,                          /* Enable all strict type-checking options */
    "esModuleInterop": true,                 /* Allow default imports from modules with no default export */
    "skipLibCheck": true,                    /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true /* Ensure that casing is consistent in file names */
  },
  "include": ["src/**/*.ts"],                /* Specify files to include in compilation */
  "exclude": ["node_modules"]                /* Specify files to exclude from compilation */
}
